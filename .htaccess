Options +FollowSymLinks -Indexes
RewriteEngine On

# Establecer la base del proyecto
RewriteBase /LaIndia/

# Permitir acceso directo a archivos y carpetas existentes en public
RewriteCond %{REQUEST_URI} ^/LaIndia/public/
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirigir todo lo demás a través de public/index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php [L,QSA]